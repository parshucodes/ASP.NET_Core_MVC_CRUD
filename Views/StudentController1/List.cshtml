@{
}
@model List<ASP.NETCoreMVCCRUD.Models.Entity.Student>
<h1>All Students</h1>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
            <td>@student.Id</td>
            <td>@student.Name</td>
            <td>@student.Email</td>
            <td>
                <a class="btn btn-primary" asp-controller="StudentController1" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                
            </td>
            </tr>
        }
    </tbody>
</table>
